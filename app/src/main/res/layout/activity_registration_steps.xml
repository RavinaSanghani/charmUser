<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegistrationStepsActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp">

        <LinearLayout
            android:id="@+id/ll1"
            android:layout_width="match_parent"
            android:layout_height="@dimen/steps_height"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/first_step"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/first_step"
                android:textSize="@dimen/steps_title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_owner_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/owner_details"
                android:textSize="@dimen/steps_sub_title" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll2"
            android:layout_width="match_parent"
            android:layout_height="@dimen/steps_height"
            android:layout_below="@id/ll1"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/second_step"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/second_step"
                android:textSize="@dimen/steps_title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_saloon_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/saloon_details"
                android:textSize="@dimen/steps_sub_title" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/steps_height"
            android:layout_below="@id/ll2"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/third_step"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/third_step"
                android:textSize="@dimen/steps_title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_saloon_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/saloon_activity"
                android:textSize="@dimen/steps_sub_title" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll4"
            android:layout_width="match_parent"
            android:layout_height="@dimen/steps_height"
            android:layout_below="@id/ll3"
            android:layout_marginBottom="@dimen/_10sdp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/fourth_step"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/fourth_step"
                android:textSize="@dimen/steps_title"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txt_employee_activity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_10sdp"
                android:gravity="center"
                android:text="@string/employee_activity"
                android:textSize="@dimen/steps_sub_title" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/rl1"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:layout_below="@id/ll4"
            android:layout_centerHorizontal="true">

            <ImageView
                android:id="@+id/img_next"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="match_parent"
                android:src="@drawable/round_right_back_arrow"
                tools:ignore="ContentDescription" />

            <TextView
                android:id="@+id/txt_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_toEndOf="@id/img_next"
                android:layout_toRightOf="@id/img_next"
                android:text="@string/next"
                android:textColor="@color/themeNavigationColor"
                android:textSize="@dimen/steps_sub_title" />
        </RelativeLayout>

        <Button
            android:id="@+id/btn_re_register"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rl1"
            android:layout_centerHorizontal="true"
            android:gravity="center|bottom"
            android:text="@string/re_register"
            android:textAllCaps="false"
            android:textColor="@color/themeStepsLinkColor"
            android:textSize="@dimen/steps_sub_title" />

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:indeterminateDrawable="@drawable/progress_bar_circle"
            android:visibility="visible" />

    </RelativeLayout>
</ScrollView>
